<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:fitsSystemWindows="true"
            android:translationY="-10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="250"
            app:contentScrim="@android:color/transparent"
            app:statusBarScrim="@android:color/transparent">

            <!-- Expanded header content with proper LinearLayout structure -->
            <LinearLayout
                android:id="@+id/expanded_header_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:fitsSystemWindows="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <!-- Avatar - will fade out on collapse (moved to back for proper z-order) -->
                <FrameLayout
                    android:id="@+id/avatar_container"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_marginTop="65dp" />

                <FrameLayout
                    android:id="@+id/name_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipChildren="false"
                    android:clipToPadding="false" />

                <FrameLayout
                    android:id="@+id/online_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clipChildren="false"
                    android:clipToPadding="false" />

                <!-- Header Buttons Container - will fade out on collapse -->
                <LinearLayout
                    android:id="@+id/header_buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

            <!-- Collapsed toolbar with pinned title area - transparent background -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/collapsed_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_extra_space"
                android:fitsSystemWindows="true"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/TransparentToolbar">

                <!-- Title area for collapsed name and status -->
                <LinearLayout
                    android:id="@+id/collapsed_title_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:alpha="0">

                    <!-- Collapsed name -->
                    <FrameLayout
                        android:id="@+id/collapsed_name_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!-- Collapsed online status -->
                    <FrameLayout
                        android:id="@+id/collapsed_online_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content container placeholder - NestedScrollView will be created programmatically -->
    <FrameLayout
        android:id="@+id/content_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>